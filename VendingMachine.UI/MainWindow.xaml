<Window x:Class="VendingMachine.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding Title}" Height="350" Width="525"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
        xmlns:UI="clr-namespace:VendingMachine.UI"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        d:DataContext="{d:DesignInstance Type=UI:DesignTimeMainWindowViewModel, IsDesignTimeCreatable=True}"
        >
    <Window.Resources>
        <DataTemplate x:Key="CoinPileTemplate" DataType="UI:CoinPile">
            <Grid ToolTip="Double click to insert coint into vending machine">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Image Source="{Binding ImagePath}" Height="20" Grid.Column="0"></Image>
                <TextBlock Text="{Binding Coin}"   Padding="5,0,0,0" Grid.Column="1" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding Amount}"  Padding="5,0,0,0" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                <Label VerticalAlignment="Center"   Grid.Column="3">Шт</Label>

            </Grid>
        </DataTemplate>

        <Style TargetType="{x:Type ListBoxItem}" x:Key="WalletListBoxItemStyle">
            <Setter Property="ContentTemplate" Value="{StaticResource CoinPileTemplate}" />
        </Style>

    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>


        <Grid Name="MachineWalletGrid" Grid.Column="1" Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Grid.Row="0">Кошелёк автомата</Label>
            <ListBox Grid.Row ="1"
                                   Name="MachineWallet" 
                                   ItemsSource="{Binding MachineCoins}"
                                   ItemContainerStyle="{StaticResource WalletListBoxItemStyle}">
            </ListBox>
        </Grid>
        
        <Grid Name="CustomerWalletGrid" Grid.Column="0" Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Grid.Row="0">Кошелёк пользователя</Label>
            <ListBox Grid.Row ="1" Name="CustomerWallet" 
                                   ItemsSource="{Binding CustomerCoins}"
                                   ItemContainerStyle="{StaticResource WalletListBoxItemStyle}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseDoubleClick" SourceName="CustomerWallet">
                        <i:InvokeCommandAction Command="{Binding PutCoinCommand}" 
                                               CommandParameter="{Binding (ListBox.SelectedItem),RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListBox}}}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </ListBox>
        </Grid>

        <Grid Name="CustomerBalance" Grid.Column="1" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0">Внесено:</TextBlock>
            <TextBlock Grid.Column="1" Text="{Binding Balance}"/>
        </Grid>

        <Grid Name="MachineShowcase" Grid.Row="2" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0">Доступные товары:</Label>
            <ListBox ItemsSource="{Binding MachineProducts}" Grid.Row="1">
                <ListBox.ItemTemplate>
                    <!--<i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseDoubleClick" SourceName="CustomerWallet">
                            <i:InvokeCommandAction Command="{Binding PutCoinCommand}" 
                                               CommandParameter="{Binding (ListBox.SelectedItem),RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListBox}}}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>-->
                    <DataTemplate  DataType="UI:ShowCaseItemViewModel">
                    <Grid ToolTip="Double click to buy product from vending machine">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition MinWidth="10"/>
                            <ColumnDefinition MinWidth="20"/>
                            <ColumnDefinition MinWidth="25"/>
                            <ColumnDefinition MinWidth="35"/>
                            <ColumnDefinition MinWidth="60"/>
                             <ColumnDefinition MinWidth="20"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" >#</TextBlock>
                        <TextBlock Grid.Column="1" Text="{Binding Number}"></TextBlock>
                        <Image Grid.Column="2" Source="{Binding ImagePath}" Height="20" HorizontalAlignment="Left"/>
                        <TextBlock Grid.Column="3" Text="{Binding Product.Name}" HorizontalAlignment="Left"></TextBlock>
                        <TextBlock Grid.Column="4" Text="{Binding Cost}" HorizontalAlignment="Center"/>
                        <TextBlock Grid.Column="5" Text="{Binding Amount}" HorizontalAlignment="Center"/>
                        <TextBlock Grid.Column="6" Text="Шт" HorizontalAlignment="Center"/>
                        
                    </Grid>
                </DataTemplate>
              </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </Grid>
</Window>
